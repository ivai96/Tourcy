@model Tourcy1.Models.Customer

@{
    ViewBag.Title = "Model.Name";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>@Html.DisplayNameFor(m => m.MembershipType.Name): @Model.MembershipType.Name</li>
    @if(Model.Birthday.HasValue)
    {  
        <li>Birthdate: @Model.Birthday.Value.ToShortDateString()</li>
    }
</ul>